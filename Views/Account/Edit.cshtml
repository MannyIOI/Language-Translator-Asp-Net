
@{
	ViewData["Title"] = "Account";
	Layout = "~/Views/Shared_Login/_Layout.cshtml";
}

<h2>Account</h2>

<div class="row">
	<div class="col-md-4 col-lg-offset-3">
		<form action="/Account/Edit" method="post">
			<input type="text" class="form-control disabled form-item"
				   value="@ViewData["user"]" placeholder="username" disabled />
			<input name="oldPassword" type="password" class="form-control disabled form-item"
				   placeholder="Old Password" />

			<input name="newPassword" type="password" class="form-control disabled form-item" placeholder="New Password" />
			<input name="conPassword" type="password" class="form-control disabled form-item" placeholder="Confirm Password" />
			<span class="red col-md-offset-4 error" style="color: red">@ViewData["input_error"]</span>
			<button class="btn btn-primary col-lg-offset-9 col-md-3" type="submit">Save</button>
		</form>
	</div>
	
</div>
